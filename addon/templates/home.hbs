<Layout::Section::Header @title="Identity & Access Management" @hideActions={{true}} />

<Layout::Section::Body>
    <div class="container mx-auto h-screen" {{increase-height-by 800}}>
        <div class="max-w-3xl my-10 mx-auto space-y-6">
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
                {{#each-in @model as |key value|}}
                    <StatWidget @title={{humanize key}} @value={{value}} />
                {{/each-in}}
            </div>
        </div>
    </div>
</Layout::Section::Body>